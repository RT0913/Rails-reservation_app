<div class="room-container">
  <h3 class="search-count">登録済みルーム一覧</h3>
   <table>
    <thead>
      <tr>
        <th scope="col">ルーム画像</th>
        <th scope="col">ルーム名</th>
        <th scope="col">ルーム紹介</th>
        <th scope="col">料金</th>
        <th scope="col">作成日</th>
      </tr>
    </thead>
    <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to image_tag("/room_images/#{room.id}.jpg", class:"room-image"), "/rooms/#{room.id}/detail" %></td>
        <td class="room-title"><%= link_to(room.name, "/rooms/#{room.id}/detail") %></td>
        <td><%= room.room_comment %></td>
        <td>¥ <%= room.room_charge %></td>
        <td><%= room.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>